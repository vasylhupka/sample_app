<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw(@post.content) %>
</p>

<p>
  <strong>User:</strong>
  <div class="user_avatars">
  <%= gravatar_for @post.user %>
  <%= link_to @post.user.name, @post.user %>
  </div>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
